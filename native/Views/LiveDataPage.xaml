<Page x:Class="BlackFlag.Views.LiveDataPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
      Title="OBD2 Live Data"
      Background="{DynamicResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="ðŸ“Š OBD2 LIVE DATA STREAM" FontSize="24" FontWeight="Bold" 
                   Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,20"/>
        
        <!-- Connection Panel -->
        <Border Grid.Row="1" Style="{DynamicResource CardStyle}" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="OBD2 Device:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="1" x:Name="DeviceSelector" Style="{DynamicResource ComboBoxStyle}">
                    <ComboBoxItem Content="COM3 - ELM327" IsSelected="True"/>
                    <ComboBoxItem Content="COM4 - OBDLink MX+"/>
                    <ComboBoxItem Content="Bluetooth - ELM327"/>
                    <ComboBoxItem Content="WiFi - 192.168.0.10"/>
                </ComboBox>
                
                <TextBlock Grid.Column="3" Text="Protocol:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <ComboBox Grid.Column="4" x:Name="ProtocolSelector" Style="{DynamicResource ComboBoxStyle}">
                    <ComboBoxItem Content="Auto Detect" IsSelected="True"/>
                    <ComboBoxItem Content="ISO 15765-4 (CAN)"/>
                    <ComboBoxItem Content="ISO 9141-2"/>
                    <ComboBoxItem Content="ISO 14230-4 (KWP)"/>
                    <ComboBoxItem Content="SAE J1850 PWM"/>
                    <ComboBoxItem Content="SAE J1850 VPW"/>
                </ComboBox>
                
                <Button Grid.Column="5" x:Name="ConnectBtn" Content="ðŸ”Œ CONNECT" 
                        Style="{DynamicResource ButtonStyle}" Click="Connect_Click" 
                        Width="120" Margin="15,0,0,0" FontWeight="Bold"/>
            </Grid>
        </Border>
        
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,0,15,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="250"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="250"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Gauges Row -->
                <Border Grid.Row="0" Style="{DynamicResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="â±ï¸ REAL-TIME GAUGES" FontSize="18" FontWeight="Bold" 
                                   Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- RPM Gauge -->
                            <Border Grid.Column="0" Background="{DynamicResource SurfaceBrush}" 
                                    Padding="15" Margin="0,0,10,0" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="ENGINE RPM" FontSize="12" HorizontalAlignment="Center" 
                                               Foreground="{DynamicResource SecondaryForeground}"/>
                                    <TextBlock x:Name="RpmValue" Text="0" FontSize="42" FontWeight="Bold" 
                                               HorizontalAlignment="Center" Foreground="{DynamicResource AccentBrush}" Margin="0,5,0,0"/>
                                    <TextBlock Text="rpm" FontSize="12" HorizontalAlignment="Center" 
                                               Foreground="{DynamicResource SecondaryForeground}"/>
                                    <ProgressBar x:Name="RpmBar" Height="8" Margin="0,10,0,0" Maximum="7000"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Speed Gauge -->
                            <Border Grid.Column="1" Background="{DynamicResource SurfaceBrush}" 
                                    Padding="15" Margin="0,0,10,0" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="VEHICLE SPEED" FontSize="12" HorizontalAlignment="Center" 
                                               Foreground="{DynamicResource SecondaryForeground}"/>
                                    <TextBlock x:Name="SpeedValue" Text="0" FontSize="42" FontWeight="Bold" 
                                               HorizontalAlignment="Center" Foreground="{DynamicResource AccentBrush}" Margin="0,5,0,0"/>
                                    <TextBlock Text="mph" FontSize="12" HorizontalAlignment="Center" 
                                               Foreground="{DynamicResource SecondaryForeground}"/>
                                    <ProgressBar x:Name="SpeedBar" Height="8" Margin="0,10,0,0" Maximum="160"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Coolant Temp Gauge -->
                            <Border Grid.Column="2" Background="{DynamicResource SurfaceBrush}" 
                                    Padding="15" Margin="0,0,10,0" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="COOLANT TEMP" FontSize="12" HorizontalAlignment="Center" 
                                               Foreground="{DynamicResource SecondaryForeground}"/>
                                    <TextBlock x:Name="CoolantValue" Text="0" FontSize="42" FontWeight="Bold" 
                                               HorizontalAlignment="Center" Foreground="{DynamicResource AccentBrush}" Margin="0,5,0,0"/>
                                    <TextBlock Text="Â°F" FontSize="12" HorizontalAlignment="Center" 
                                               Foreground="{DynamicResource SecondaryForeground}"/>
                                    <ProgressBar x:Name="CoolantBar" Height="8" Margin="0,10,0,0" Maximum="250"/>
                                </StackPanel>
                            </Border>
                            
                            <!-- Throttle Gauge -->
                            <Border Grid.Column="3" Background="{DynamicResource SurfaceBrush}" 
                                    Padding="15" CornerRadius="5">
                                <StackPanel>
                                    <TextBlock Text="THROTTLE POS" FontSize="12" HorizontalAlignment="Center" 
                                               Foreground="{DynamicResource SecondaryForeground}"/>
                                    <TextBlock x:Name="ThrottleValue" Text="0" FontSize="42" FontWeight="Bold" 
                                               HorizontalAlignment="Center" Foreground="{DynamicResource AccentBrush}" Margin="0,5,0,0"/>
                                    <TextBlock Text="%" FontSize="12" HorizontalAlignment="Center" 
                                               Foreground="{DynamicResource SecondaryForeground}"/>
                                    <ProgressBar x:Name="ThrottleBar" Height="8" Margin="0,10,0,0" Maximum="100"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Charts Row 1 -->
                <Border Grid.Row="1" Style="{DynamicResource CardStyle}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="ðŸ“ˆ RPM / SPEED" FontWeight="Bold" 
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                            <lvc:CartesianChart x:Name="RpmSpeedChart" Height="200"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="ðŸŒ¡ï¸ ENGINE TEMPERATURE" FontWeight="Bold" 
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                            <lvc:CartesianChart x:Name="TempChart" Height="200"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Data Grid -->
                <Border Grid.Row="2" Style="{DynamicResource CardStyle}" Margin="0,0,0,15">
                    <StackPanel>
                        <TextBlock Text="ðŸ“‹ ALL PARAMETERS" FontSize="18" FontWeight="Bold" 
                                   Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,15"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- Column 1 -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <Border Background="{DynamicResource SurfaceBrush}" Padding="10" Margin="0,0,0,5" CornerRadius="3">
                                    <Grid>
                                        <TextBlock Text="MAF Sensor:" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="MafValue" Text="0.00 g/s" HorizontalAlignment="Right" 
                                                   FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                    </Grid>
                                </Border>
                                <Border Background="{DynamicResource SurfaceBrush}" Padding="10" Margin="0,0,0,5" CornerRadius="3">
                                    <Grid>
                                        <TextBlock Text="Intake Air Temp:" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="IatValue" Text="0Â°F" HorizontalAlignment="Right" 
                                                   FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                    </Grid>
                                </Border>
                                <Border Background="{DynamicResource SurfaceBrush}" Padding="10" Margin="0,0,0,5" CornerRadius="3">
                                    <Grid>
                                        <TextBlock Text="Fuel Pressure:" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="FuelPressValue" Text="0 psi" HorizontalAlignment="Right" 
                                                   FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                            
                            <!-- Column 2 -->
                            <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                <Border Background="{DynamicResource SurfaceBrush}" Padding="10" Margin="0,0,0,5" CornerRadius="3">
                                    <Grid>
                                        <TextBlock Text="O2 Sensor B1S1:" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="O2Value" Text="0.00 V" HorizontalAlignment="Right" 
                                                   FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                    </Grid>
                                </Border>
                                <Border Background="{DynamicResource SurfaceBrush}" Padding="10" Margin="0,0,0,5" CornerRadius="3">
                                    <Grid>
                                        <TextBlock Text="Short Fuel Trim:" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="StftValue" Text="0.0%" HorizontalAlignment="Right" 
                                                   FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                    </Grid>
                                </Border>
                                <Border Background="{DynamicResource SurfaceBrush}" Padding="10" Margin="0,0,0,5" CornerRadius="3">
                                    <Grid>
                                        <TextBlock Text="Long Fuel Trim:" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="LtftValue" Text="0.0%" HorizontalAlignment="Right" 
                                                   FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                            
                            <!-- Column 3 -->
                            <StackPanel Grid.Column="2">
                                <Border Background="{DynamicResource SurfaceBrush}" Padding="10" Margin="0,0,0,5" CornerRadius="3">
                                    <Grid>
                                        <TextBlock Text="Timing Advance:" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="TimingValue" Text="0Â°" HorizontalAlignment="Right" 
                                                   FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                    </Grid>
                                </Border>
                                <Border Background="{DynamicResource SurfaceBrush}" Padding="10" Margin="0,0,0,5" CornerRadius="3">
                                    <Grid>
                                        <TextBlock Text="Engine Load:" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="LoadValue" Text="0%" HorizontalAlignment="Right" 
                                                   FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                    </Grid>
                                </Border>
                                <Border Background="{DynamicResource SurfaceBrush}" Padding="10" Margin="0,0,0,5" CornerRadius="3">
                                    <Grid>
                                        <TextBlock Text="Fuel Level:" VerticalAlignment="Center"/>
                                        <TextBlock x:Name="FuelLevelValue" Text="0%" HorizontalAlignment="Right" 
                                                   FontWeight="Bold" Foreground="{DynamicResource AccentBrush}"/>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Charts Row 2 -->
                <Border Grid.Row="3" Style="{DynamicResource CardStyle}" Margin="0,0,0,15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="â›½ FUEL TRIMS" FontWeight="Bold" 
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                            <lvc:CartesianChart x:Name="FuelTrimChart" Height="200"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="âš¡ ENGINE LOAD / THROTTLE" FontWeight="Bold" 
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
                            <lvc:CartesianChart x:Name="LoadThrottleChart" Height="200"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Status -->
                <Border Grid.Row="4" Background="{DynamicResource SurfaceBrush}" Padding="15" CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="â— " x:Name="StatusIndicator" FontSize="20" Foreground="Red"/>
                            <TextBlock x:Name="StatusText" Text="Disconnected" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </StackPanel>
                        
                        <TextBlock Grid.Column="1" x:Name="DataRateText" Text="0 samples/sec" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center" 
                                   Foreground="{DynamicResource SecondaryForeground}"/>
                        
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Content="ðŸ“Š Start Recording" Style="{DynamicResource ButtonStyle}" Margin="0,0,10,0"/>
                            <Button Content="ðŸ’¾ Export Data" Style="{DynamicResource ButtonStyle}"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
