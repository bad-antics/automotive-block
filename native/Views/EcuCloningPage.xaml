<Page x:Class="BlackFlag.Views.EcuCloningPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ECU Cloning"
      Background="{DynamicResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="ðŸ’¾ ECU CLONING" FontSize="24" FontWeight="Bold" 
                   Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,20"/>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Read ECU -->
            <Border Grid.Column="0" Style="{DynamicResource CardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“¤" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="READ ECU" FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource AccentBrush}" 
                               HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Read full ECU memory to file" TextAlignment="Center"
                               Foreground="{DynamicResource SecondaryForeground}" Margin="0,0,0,20"/>
                    
                    <Button Content="START READ" Style="{DynamicResource PrimaryButtonStyle}"
                            Click="ReadEcu_Click" Width="140"/>
                    
                    <ProgressBar x:Name="ReadProgress" Margin="0,15,0,0" Width="180" Visibility="Collapsed"/>
                    <TextBlock x:Name="ReadStatus" Foreground="{DynamicResource SecondaryForeground}" 
                               HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Write ECU -->
            <Border Grid.Column="1" Style="{DynamicResource CardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ“¥" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="WRITE ECU" FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource AccentBrush}" 
                               HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Write tune/backup to ECU" TextAlignment="Center"
                               Foreground="{DynamicResource SecondaryForeground}" Margin="0,0,0,20"/>
                    
                    <Button Content="SELECT FILE" Style="{DynamicResource ButtonStyle}"
                            Click="WriteEcu_Click" Width="140"/>
                    
                    <ProgressBar x:Name="WriteProgress" Margin="0,15,0,0" Width="180" Visibility="Collapsed"/>
                    <TextBlock x:Name="WriteStatus" Foreground="{DynamicResource SecondaryForeground}" 
                               HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </StackPanel>
            </Border>
            
            <!-- Clone ECU -->
            <Border Grid.Column="2" Style="{DynamicResource CardStyle}">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ðŸ”„" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="CLONE ECU" FontSize="18" FontWeight="Bold" 
                               Foreground="{DynamicResource AccentBrush}" 
                               HorizontalAlignment="Center" Margin="0,10,0,5"/>
                    <TextBlock Text="Copy one ECU to another" TextAlignment="Center"
                               Foreground="{DynamicResource SecondaryForeground}" Margin="0,0,0,20"/>
                    
                    <Button Content="START CLONE" Style="{DynamicResource ButtonStyle}"
                            Click="CloneEcu_Click" Width="140"/>
                    
                    <TextBlock x:Name="CloneStatus" Foreground="{DynamicResource SecondaryForeground}" 
                               HorizontalAlignment="Center" Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
