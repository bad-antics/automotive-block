<Page x:Class="BlackFlag.Views.OeFlashPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="OE Flash and As-Built Data"
      Background="{DynamicResource BackgroundBrush}">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <TextBlock Text="ðŸ“ OE FLASH FILES &amp; AS-BUILT DATA" FontSize="24" FontWeight="Bold" 
                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,10"/>
            <TextBlock Text="Download stock calibration files and as-built configuration data for your vehicle" 
                       Foreground="{DynamicResource SecondaryForeground}" Margin="0,0,0,20"/>
            
            <!-- Vehicle Selection -->
            <Border Style="{DynamicResource CardStyle}" Margin="0,0,15,0">
                <StackPanel>
                    <TextBlock Text="VEHICLE SELECTION" FontWeight="Bold" FontSize="16"
                               Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Manufacturer:" VerticalAlignment="Center" 
                                   Margin="0,0,15,10" Foreground="{DynamicResource ForegroundBrush}"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="ManufacturerCombo" 
                                  Style="{DynamicResource ComboBoxStyle}" Margin="0,0,0,10"
                                  SelectionChanged="ManufacturerCombo_SelectionChanged"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Vehicle:" VerticalAlignment="Center" 
                                   Margin="0,0,15,0" Foreground="{DynamicResource ForegroundBrush}"/>
                        <ComboBox Grid.Row="1" Grid.Column="1" x:Name="VehicleCombo" 
                                  Style="{DynamicResource ComboBoxStyle}"
                                  SelectionChanged="VehicleCombo_SelectionChanged"/>
                    </Grid>
                    
                    <Border Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1" Padding="15" Margin="0,15,0,0">
                        <StackPanel x:Name="VehicleInfoPanel" Visibility="Collapsed">
                            <TextBlock x:Name="VehicleInfo" FontWeight="Bold" FontSize="14"
                                       Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,5"/>
                            <TextBlock x:Name="EcuInfo" Foreground="{DynamicResource SecondaryForeground}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
            
            <!-- Stock Flash Files -->
            <Border Style="{DynamicResource CardStyle}" Margin="0,20,15,0">
                <StackPanel>
                    <TextBlock Text="ðŸ“¥ STOCK FLASH FILES" FontWeight="Bold" FontSize="16"
                               Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Original factory calibration files for ECU reprogramming" 
                               Foreground="{DynamicResource SecondaryForeground}" Margin="0,0,0,10"/>
                    
                    <ListBox x:Name="FlashFilesList" Background="{DynamicResource SurfaceBrush}"
                             BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                             Height="200" Margin="0,0,0,15">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource SurfaceBrush}" Padding="10" Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding FileName}" FontWeight="Bold" 
                                                       Foreground="{DynamicResource ForegroundBrush}"/>
                                            <TextBlock Foreground="{DynamicResource SecondaryForeground}">
                                                <Run Text="{Binding EcuType}"/> â€¢ <Run Text="{Binding Version}"/> â€¢ <Run Text="{Binding FileSize}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding Description}" FontSize="11"
                                                       Foreground="{DynamicResource SecondaryForeground}"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="1" Text="{Binding ReleaseDate}" 
                                                   VerticalAlignment="Center" Margin="0,0,15,0"
                                                   Foreground="{DynamicResource SecondaryForeground}"/>
                                        
                                        <Button Grid.Column="2" Content="ðŸ“¥ Download" 
                                                Style="{DynamicResource ButtonStyle}"
                                                Tag="{Binding}" Click="DownloadFlash_Click"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <StackPanel Orientation="Horizontal">
                        <Button Content="ðŸ”„ REFRESH FILES" Style="{DynamicResource ButtonStyle}" 
                                Click="RefreshFlashFiles_Click"/>
                        <Button Content="ðŸ“‚ OPEN DOWNLOADS FOLDER" Style="{DynamicResource ButtonStyle}" 
                                Margin="10,0,0,0" Click="OpenDownloadsFolder_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- As-Built Data -->
            <Border Style="{DynamicResource CardStyle}" Margin="0,20,15,0">
                <StackPanel>
                    <TextBlock Text="ðŸ”§ AS-BUILT CONFIGURATION DATA" FontWeight="Bold" FontSize="16"
                               Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,15"/>
                    
                    <TextBlock Text="Factory configuration codes and module programming data" 
                               Foreground="{DynamicResource SecondaryForeground}" Margin="0,0,0,10"/>
                    
                    <ListBox x:Name="AsBuiltDataList" Background="{DynamicResource SurfaceBrush}"
                             BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1"
                             Height="200" Margin="0,0,0,15">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource SurfaceBrush}" Padding="10" Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding ModuleName}" FontWeight="Bold" 
                                                       Foreground="{DynamicResource ForegroundBrush}"/>
                                            <TextBlock Foreground="{DynamicResource SecondaryForeground}">
                                                <Run Text="{Binding ModuleAddress}"/> â€¢ <Run Text="{Binding DataBlocks}"/> blocks
                                            </TextBlock>
                                            <TextBlock Text="{Binding Description}" FontSize="11"
                                                       Foreground="{DynamicResource SecondaryForeground}"/>
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="1" Text="{Binding FileSize}" 
                                                   VerticalAlignment="Center" Margin="0,0,15,0"
                                                   Foreground="{DynamicResource SecondaryForeground}"/>
                                        
                                        <Button Grid.Column="2" Content="ðŸ“¥ Download" 
                                                Style="{DynamicResource ButtonStyle}"
                                                Tag="{Binding}" Click="DownloadAsBuilt_Click"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    
                    <StackPanel Orientation="Horizontal">
                        <Button Content="ðŸ“‹ EXPORT ALL AS-BUILT" Style="{DynamicResource ButtonStyle}" 
                                Click="ExportAllAsBuilt_Click"/>
                        <Button Content="ðŸ“„ VIEW AS TEXT" Style="{DynamicResource ButtonStyle}" 
                                Margin="10,0,0,0" Click="ViewAsBuiltText_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Download Info -->
            <Border Style="{DynamicResource CardStyle}" Margin="0,20,15,0">
                <StackPanel>
                    <TextBlock Text="â„¹ï¸ DOWNLOAD INFORMATION" FontWeight="Bold" FontSize="16"
                               Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Download Location:"
                                   Foreground="{DynamicResource SecondaryForeground}" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="DownloadPath" Text="â€”"
                                   Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Total Downloads:"
                                   Foreground="{DynamicResource SecondaryForeground}" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="TotalDownloads" Text="0 files"
                                   Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Storage Used:"
                                   Foreground="{DynamicResource SecondaryForeground}" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="StorageUsed" Text="0 MB"
                                   Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>
                        
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Last Download:"
                                   Foreground="{DynamicResource SecondaryForeground}"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" x:Name="LastDownload" Text="â€”"
                                   Foreground="{DynamicResource ForegroundBrush}"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Status Bar -->
            <Border Background="{DynamicResource SurfaceBrush}" BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="0,1,0,0" Padding="15,10" Margin="0,20,-15,0">
                <Grid>
                    <TextBlock x:Name="StatusText" Text="âš”ï¸ Select a vehicle to view available files"
                               Foreground="{DynamicResource SecondaryForeground}"/>
                    <ProgressBar x:Name="DownloadProgress" Height="4" VerticalAlignment="Bottom"
                                 Margin="0,5,0,-10" Visibility="Collapsed"
                                 Foreground="{DynamicResource AccentBrush}"/>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>
