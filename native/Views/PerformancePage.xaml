<Page x:Class="BlackFlag.Views.PerformancePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Performance Tuning"
      Background="{DynamicResource BackgroundBrush}">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="ðŸŽï¸ PERFORMANCE TUNING" FontSize="24" FontWeight="Bold" 
                   Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,20"/>
        
        <!-- Tabs -->
        <Border Grid.Row="1" Background="{DynamicResource SurfaceBrush}" Padding="0" Margin="0,0,0,0">
            <StackPanel Orientation="Horizontal">
                <RadioButton x:Name="TabFuel" Content="â›½ Fuel Maps" GroupName="PerfTabs" IsChecked="True"
                             Click="Tab_Click" Style="{DynamicResource NavButtonStyle}" Padding="20,10"/>
                <RadioButton x:Name="TabTiming" Content="â±ï¸ Ignition Timing" GroupName="PerfTabs"
                             Click="Tab_Click" Style="{DynamicResource NavButtonStyle}" Padding="20,10"/>
                <RadioButton x:Name="TabBoost" Content="ðŸ’¨ Boost Control" GroupName="PerfTabs"
                             Click="Tab_Click" Style="{DynamicResource NavButtonStyle}" Padding="20,10"/>
                <RadioButton x:Name="TabLimiters" Content="ðŸš« Limiters" GroupName="PerfTabs"
                             Click="Tab_Click" Style="{DynamicResource NavButtonStyle}" Padding="20,10"/>
            </StackPanel>
        </Border>
        
        <!-- Content -->
        <Border Grid.Row="2" Style="{DynamicResource CardStyle}" Margin="0,20,15,0">
            <StackPanel x:Name="ContentPanel">
                <!-- Default: Fuel Maps -->
                <TextBlock Text="FUEL MAP EDITOR" FontWeight="Bold" 
                           Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,15"/>
                
                <TextBlock Text="Select a vehicle from the top bar to load fuel maps." 
                           Foreground="{DynamicResource SecondaryForeground}" Margin="0,0,0,20"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Base AFR:" 
                               Foreground="{DynamicResource SecondaryForeground}"/>
                    <Slider Grid.Row="0" Grid.Column="1" Minimum="10" Maximum="16" Value="14.7" 
                            Width="300" HorizontalAlignment="Left"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="WOT AFR:" Margin="0,10,0,0"
                               Foreground="{DynamicResource SecondaryForeground}"/>
                    <Slider Grid.Row="1" Grid.Column="1" Minimum="10" Maximum="14" Value="12.5" 
                            Width="300" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Cruise AFR:" Margin="0,10,0,0"
                               Foreground="{DynamicResource SecondaryForeground}"/>
                    <Slider Grid.Row="2" Grid.Column="1" Minimum="14" Maximum="18" Value="15.5" 
                            Width="300" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Cold Start Enrich:" Margin="0,10,0,0"
                               Foreground="{DynamicResource SecondaryForeground}"/>
                    <Slider Grid.Row="3" Grid.Column="1" Minimum="0" Maximum="30" Value="15" 
                            Width="300" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                </Grid>
                
                <StackPanel Orientation="Horizontal" Margin="0,30,0,0">
                    <Button Content="ðŸ’¾ SAVE CHANGES" Style="{DynamicResource PrimaryButtonStyle}"/>
                    <Button Content="â†©ï¸ RESET TO STOCK" Style="{DynamicResource ButtonStyle}" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
