<Page x:Class="BlackFlag.Views.VinDecoderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="VIN Decoder"
      Background="{DynamicResource BackgroundBrush}">
    
    <StackPanel>
        <TextBlock Text="ðŸ” VIN DECODER" FontSize="24" FontWeight="Bold" 
                   Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,20"/>
        
        <Border Style="{DynamicResource CardStyle}" Margin="0,0,15,0">
            <StackPanel>
                <TextBlock Text="Enter Vehicle Identification Number (17 characters):" 
                           Foreground="{DynamicResource ForegroundBrush}" Margin="0,0,0,10"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox x:Name="VinInput" Grid.Column="0" 
                             Style="{DynamicResource TextBoxStyle}"
                             MaxLength="17" FontSize="18" FontFamily="Consolas"
                             CharacterCasing="Upper"/>
                    
                    <Button Grid.Column="1" Content="DECODE" 
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Click="DecodeVin_Click" Margin="10,0,0,0" Width="120"/>
                </Grid>
                
                <TextBlock x:Name="VinLength" Text="0/17 characters" 
                           Foreground="{DynamicResource SecondaryForeground}" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>
        
        <Border x:Name="ResultsPanel" Style="{DynamicResource CardStyle}" 
                Margin="0,20,15,0" Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="DECODED INFORMATION" FontWeight="Bold" 
                           Foreground="{DynamicResource AccentBrush}" Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="World Manufacturer ID:" 
                               Foreground="{DynamicResource SecondaryForeground}"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="WmiResult" 
                               Foreground="{DynamicResource ForegroundBrush}"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Manufacturer:" 
                               Foreground="{DynamicResource SecondaryForeground}" Margin="0,8,0,0"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="ManufacturerResult" 
                               Foreground="{DynamicResource AccentBrush}" Margin="0,8,0,0"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Vehicle Descriptor:" 
                               Foreground="{DynamicResource SecondaryForeground}" Margin="0,8,0,0"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="VdsResult" 
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,8,0,0"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Model Year:" 
                               Foreground="{DynamicResource SecondaryForeground}" Margin="0,8,0,0"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="YearResult" 
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,8,0,0"/>
                    
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Plant Code:" 
                               Foreground="{DynamicResource SecondaryForeground}" Margin="0,8,0,0"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="PlantResult" 
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,8,0,0"/>
                    
                    <TextBlock Grid.Row="5" Grid.Column="0" Text="Serial Number:" 
                               Foreground="{DynamicResource SecondaryForeground}" Margin="0,8,0,0"/>
                    <TextBlock Grid.Row="5" Grid.Column="1" x:Name="SerialResult" 
                               Foreground="{DynamicResource ForegroundBrush}" Margin="0,8,0,0"/>
                </Grid>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
