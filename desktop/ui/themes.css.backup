/* ============ THEME SELECTOR STYLING ============ */
.theme-selector {
    padding: 0.5rem 1rem;
    background: rgba(0, 255, 0, 0.1);
    border: 1px solid #00ff00;
    color: #00ff00;
    font-family: 'Courier New', monospace;
    border-radius: 3px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 0.9rem;
}

.theme-selector:hover {
    background: rgba(0, 255, 0, 0.2);
    box-shadow: 0 0 10px rgba(0, 255, 0, 0.3);
}

.theme-selector option {
    background: #000;
    color: #00ff00;
}

body.commodore64-theme .theme-selector {
    border-color: #7C71DA;
    color: #A39EDB;
    background: rgba(124, 113, 218, 0.15);
}

body.commodore64-theme .theme-selector option {
    background: #3E31A2;
    color: #A39EDB;
}

body.ford-fjds-theme .theme-selector {
    border-color: #00aaff;
    color: #00aaff;
    background: rgba(0, 170, 255, 0.1);
}

body.ford-fjds-theme .theme-selector option {
    background: #003d7a;
    color: #00aaff;
}

body.witech-theme .theme-selector {
    border-color: #ff6600;
    color: #ff6600;
    background: rgba(255, 102, 0, 0.15);
}

body.witech-theme .theme-selector option {
    background: #0d1117;
    color: #ff6600;
}
