/* ============ COMMODORE 64 THEME - Authentic C64 BASIC Interface ============ */
body.commodore64-theme {
    background: #3E31A2; /* Classic C64 blue */
    color: #7C71DA; /* Light blue text */
    font-family: 'Courier New', 'C64 Pro Mono', monospace;
    text-shadow: none;
}

/* Retro PETSCII-style borders and boxes */
body.commodore64-theme .navbar {
    background: #3E31A2;
    border-bottom: 3px double #7C71DA;
    border-top: 3px double #7C71DA;
    padding: 10px 0;
}

body.commodore64-theme .brand-name {
    color: #A39EDB;
    text-shadow: 2px 2px 0px #2B218C; /* Retro shadow effect */
    font-family: 'Courier New', monospace;
    font-weight: bold;
    letter-spacing: 2px;
}

/* Classic C64 box drawing characters style */
body.commodore64-theme .menu-card,
body.commodore64-theme .history-item,
body.commodore64-theme .profile-card,
body.commodore64-theme .backup-item,
body.commodore64-theme .map-section {
    border: 2px solid #7C71DA;
    background: rgba(62, 49, 162, 0.8); /* Slightly darker blue */
    box-shadow: none; /* No glow - authentic C64 had no glow */
    position: relative;
}

/* PETSCII-style corners */
body.commodore64-theme .menu-card::before,
body.commodore64-theme .history-item::before {
    content: '\u250C'; /* Box drawing character ┌ */
    position: absolute;
    top: -10px;
    left: -10px;
    color: #7C71DA;
    font-size: 16px;
}

body.commodore64-theme .menu-card::after,
body.commodore64-theme .history-item::after {
    content: '\u2510'; /* Box drawing character ┐ */
    position: absolute;
    top: -10px;
    right: -10px;
    color: #7C71DA;
    font-size: 16px;
}

body.commodore64-theme .menu-card:hover,
body.commodore64-theme .history-item:hover {
    border-color: #A39EDB;
    background: rgba(124, 113, 218, 0.3);
    cursor: pointer;
}

body.commodore64-theme .menu-card h3,
body.commodore64-theme .nav-brand,
body.commodore64-theme h1, 
body.commodore64-theme h2,
body.commodore64-theme h3,
body.commodore64-theme h4 {
    color: #A39EDB;
    text-transform: uppercase;
    letter-spacing: 1px;
}

/* C64-style buttons with blocky appearance */
body.commodore64-theme .btn, 
body.commodore64-theme .menu-btn,
body.commodore64-theme .btn-small {
    border: 2px solid #7C71DA;
    background: #5045BE;
    color: #A39EDB;
    box-shadow: 4px 4px 0px #2B218C; /* Retro 3D effect */
    border-radius: 0; /* Sharp corners */
    font-weight: bold;
    text-transform: uppercase;
}

body.commodore64-theme .btn:hover,
body.commodore64-theme .menu-btn:hover,
body.commodore64-theme .btn-small:hover {
    background: #7C71DA;
    color: #3E31A2;
    box-shadow: 2px 2px 0px #2B218C;
    transform: translate(2px, 2px); /* Button press effect */
}

body.commodore64-theme .status-banner {
    background: #5045BE;
    border-bottom: 2px solid #7C71DA;
    border-top: 2px solid #7C71DA;
    padding: 8px;
}

/* C64-style input fields */
body.commodore64-theme .vehicle-select,
body.commodore64-theme input,
body.commodore64-theme textarea {
    background: #3E31A2;
    border: 2px solid #7C71DA;
    color: #A39EDB;
    font-family: 'Courier New', monospace;
    border-radius: 0;
}

body.commodore64-theme .vehicle-select:focus,
body.commodore64-theme input:focus,
body.commodore64-theme textarea:focus {
    border-color: #A39EDB;
    background: #5045BE;
    outline: none;
}

body.commodore64-theme .library-tab.active {
    border-bottom: 3px solid #A39EDB;
    color: #A39EDB;
    background: #5045BE;
}

body.commodore64-theme .history-info strong,
body.commodore64-theme .backup-info strong,
body.commodore64-theme .profile-card h4 {
    color: #A39EDB;
}

body.commodore64-theme .history-info span,
body.commodore64-theme .backup-info span,
body.commodore64-theme .profile-stats span {
    color: #7C71DA;
}

body.commodore64-theme .status-indicator.blue {
    background: #7C71DA;
    box-shadow: 0 0 5px #7C71DA;
}

